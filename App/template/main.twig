<!DOCTYPE html>
<html>
<head>
{% block head %}
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>{% block title %}ArticulateCMS by ArticulateLogic.com{% endblock %}</title>
    <link href="{{ path_static }}css/forms.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="{{ path_static }}css/zstyle.css" rel="stylesheet" type="text/css" media="screen" />
    <link rel="stylesheet" type="text/css" media="screen" href="{{ path_static }}css/ui-lightness/jquery-ui-1.7.2.custom.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="{{ path_static }}css/dialog/jquery.alerts.css" />
    <!--[if lte IE 6]>
    <link href={{ path_static }}css/msie.css" type="text/css" rel="stylesheet" media="screen" />
    <![endif]-->
    <script type="text/javascript" src="{{ path_static }}js/jquery-1.3.2.min.js"></script>
    <script type="text/javascript" src="{{ path_static }}js/jquery-ui-1.7.2.custom.min.js"></script>
    <script type="text/javascript" src="{{ path_static }}js/jquery.validate.js"></script>
    <script type="text/javascript" src="{{ path_static }}js/jquery.alerts.js" ></script>
    {% if coneditor_js %}
        {% include coneditor_js %}
    {% endif %}
{% endblock %}
</head>

<body>
    <div id="contentheader">
        {% block contentheader %}
        <div id="banner">
            <img src="{{ path_static }}images/logo.gif" id="logo" />

            <div id="navigatemenu">
                <ul id="nav">
                    <li><a href="{{ path_url_postfix }}/home">Home</a></li>

                    <li><a href="{{ path_url_postfix }}/a/Lorem_Ipsum">Dummy Links</a>
                        <ul>
                            <li><a href="{{ path_url_postfix }}/a/Lorem_Ipsum">Dummy Link 1</a></li>
                            <li><a href="{{ path_url_postfix }}/a/Lorem_Ipsum">Dummy Link 2</a></li>
                        </ul>
                    </li>
                    <li><a href="{{ path_url_postfix }}/a/contact">Contact</a></li>
                    <li><a href="{{ path_url_postfix }}/a/conveylive">ConveyLive</a></li>
                </ul>
            </div>
        </div>
        <div id="topright">
            {% if is_login %}
            <a href="{{ path_url_postfix }}/logout">Logout</a>
            |
            <a href="{{ path_url_postfix }}/uhome">Member Home</a>
            {% else %}
            <a href="{{ path_url_postfix }}/login">Login</a>
            |
            <a href="{{ path_url_postfix }}/signup">Signup</a>
            {% endif %}
        </div>
        {% endblock %}
    </div>

    <div id="contentbody">
    {% block contentbody %}
        {% if is_admin %}
            {% include "admin_top_menu.twig" %}
        {% endif %}

        {% for error in errors %}
            <div id="reports">{{ error }}</div>
        {% endfor %}

        {% if title %}
            <h2 class="title">
                {{ title }}
            </h2>
        {% endif %}

        {% if subtitle %}
            <h2 class="subtitle">
                {{ subtitle }}
            </h2>
        {% endif %}

        {% if body %}
            <div class="body">
                {% if not_raw %}
                    {{ body }}
                {% else %}
                    {{ body|raw }}
                {% endif %}
            </div>
        {% endif %}
    {% endblock %}
    </div>

    <div id="footer">
        {% block footer %}
        <p>
            &copy; 2015 <a href="http://www.articulatelogic.com/">ArticulateLogic.com</a>
            | Design: <a href="mailto:aazhbd@yahoo.com">aazhbd</a>
            | <a href="{{ path_url_postfix }}/a/privacy">Privacy Policy</a>
            | <a href="{{ path_url_postfix }}/a/termsofuse">Terms of Use</a>
            | <a href="{{ path_url_postfix }}/a/services">Services</a>
            | <a href="{{ path_url_postfix }}/a/contact">Contact</a>
        </p>
        {% endblock %}
    </div>
</body>
</html>
